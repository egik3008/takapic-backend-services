extends layout_new

block content
  div(style="margin-bottom: 30px;padding-bottom: 20px;border-bottom: dashed #ddd;")
    img(src="https://res.cloudinary.com/dvdm9a68v/image/upload/c_scale,w_180/v1548052652/assets/calendar_checklist.png" alt="Email Notif" style="display: block;margin: auto;")


  div(style="text-align: center; margin-bottom: 30px;")
    p(style="font-size:22px;color:#222222;font-weight:bold;") #{MESSAGE_TITLE}
    p #{MESSAGE_SUB_TITLE}
    
  br

  table(style="margin: auto; width: 75%; border: solid 1px; border-collapse: collapse;")
    tr
      td(style="padding: 10px; border-top: solid 1px;") Date
      td(style="padding: 10px; border-top: solid 1px;") : #{RESERVATION_DATE}
    tr
      td(style="padding: 10px; border-top: solid 1px;") Time
      td(style="padding: 10px; border-top: solid 1px;") : #{RESERVATION_TIME}
    tr
      td(style="padding: 10px; border-top: solid 1px;") Duration
      td(style="padding: 10px; border-top: solid 1px;") : #{RESERVATION_DURATION}
    tr
      td(style="padding: 10px; border-top: solid 1px;") Number of People
      td(style="padding: 10px; border-top: solid 1px;") : #{RESERVATION_PEOPLES}

  br

  table(style="margin: auto; width: 75%; border: solid 1px; border-collapse: collapse; background-color: lightcyan;")
    tr
      td(style="text-align: center; padding: 10px;" colspan="2") Detail Bills
    tr
      td(style="padding: 10px; border: solid 1px;") Rate
      td(style="padding: 10px; border: solid 1px;") #{RESERVATION_RATE}
    //- tr
    //-   td(style="padding: 10px; border: solid 1px;") Fee
    //-   td(style="padding: 10px; border: solid 1px;") #{RESERVATION_FEE}
    tr
      td(style="padding: 10px; border: solid 1px;") Total
      td(style="padding: 10px; border: solid 1px;") #{RESERVATION_TOTAL}
    tr
      td(style="padding: 10px; border-top: solid 1px;") Reservation Code
      td(style="padding: 10px; text-align: right; border-top: solid 1px;") #{RESERVATION_CODE}

  br
  br
  br

  p
    strong #{TRAVELLER_NAME} is your customer

  div(style="width: 100%; margin-top: 0; padding-bottom: 20px; border-bottom: solid 1px #ccc;")
    div(style="display: inline-block; width: 55%;") Contact <strong>#{TRAVELLER_NAME}</strong> to coordinate your meeting point

    div(style="display: inline-block; color: #3aeccb; width: 40%; float: right; text-align: right;") Message Customer<br>#{TRAVELLER_PHONE}

  div(style="width: 100%; padding: 20px 0; border-bottom: solid 1px #ccc;")
    div(style="display: inline-block; width: 55%;") Any question, please contact our customer support

    div(style="display: inline-block; color: #3aeccb; width: 40%; float: right; text-align: right;") support@takapic.com

  br

  p
    strong With Love, Takapic

  