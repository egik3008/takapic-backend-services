          tr
            td(border="0" cellpadding="0" cellspacing="0" height="38" width="222")
              img(src="https://res.cloudinary.com/dvdm9a68v/image/upload/c_scale,w_125/v1542759089/assets/tl_b_1.png" alt="Takapic")
          tr
            td(height="64" style="height: 25px; font-family: Helvetica, Arial, sans-serif; font-size:18px; font-style:bold;")
