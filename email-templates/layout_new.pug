                img(src="https://www.solodev.com/assets/email-signature/facebook-email-icon.jpg" alt="Facebook Icon")
              a(href="https://www.linkedin.com/company/takapic" target="_blank" style="margin-left: 5px")
                img(src="https://www.solodev.com/assets/email-signature/linkedin-email-icon.jpg" alt="LinkedIn Icon")
              a(href="https://www.instagram.com/takapic_official/" target="_blank" style="margin-left: 5px")
                img(src="https://www.solodev.com/assets/email-signature/twitter-email-icon.jpg" alt="Instagram Icon")
